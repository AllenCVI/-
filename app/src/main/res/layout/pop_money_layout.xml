<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/pop_money_zhichu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_expenses" />


        <TextView

            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出" />

        <ImageView
            android:id="@+id/pop_money_zhichu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ucrop_ic_done"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/split_line_color"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pop_money_shouru_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_income" />


        <TextView

            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入" />

        <ImageView
            android:id="@+id/pop_money_shouru_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ucrop_ic_done"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <View
        android:id="@+id/pop_money_bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

</LinearLayout>