<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detial_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/item_detial_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:padding="@dimen/len_6">


        <TextView
            android:id="@+id/item_detial_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="10月11日  星期三"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/item_detial_money_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="收入:300   支出:2000"
            android:textSize="@dimen/text_small_size" />

    </RelativeLayout>

    <View
        android:id="@+id/item_detial_view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_line_color"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">


        <ImageView
            android:id="@+id/item_detial_image"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/category_e_donate_s"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/item_detial_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="居家"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:id="@+id/tv_beizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_detial_name_text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    />


                <TextView
                    android:id="@+id/item_detial_mingxi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-100000"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_normal_size"/>

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/item_detial_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:background="@color/split_line_color" />
</LinearLayout>