<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_height="48dp"
        >
        <TableRow
            android:id="@+id/stock_list_header_row">
            <TextView
                android:id="@+id/stock_list_header_qi"
                android:text="月份"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="14"
                android:textColor="@color/first_text"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dip"
                />

            <com.kuxuan.moneynote.ui.weight.MyTextView
                android:id="@+id/stock_list_header_price"
                android:text="收入"
                android:layout_width="0dp"
                android:textColor="@color/first_text"
                android:layout_weight="28"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dip"
                />

            <com.kuxuan.moneynote.ui.weight.MyTextView
                android:id="@+id/stock_list_header_last_lixi"
                android:text="支出"
                android:layout_width="0dp"
                android:layout_weight="28"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/first_text"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dip"
                />

            <com.kuxuan.moneynote.ui.weight.MyTextView
                android:id="@+id/stock_list_header_price_change"
                android:text="结余"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_weight="28"
                android:ellipsize="end"
                android:textColor="@color/first_text"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dip"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>