<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_head_complex_first"></include>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/icon_lin"
    android:layout_marginStart="@dimen/len_16"
    android:layout_marginEnd="@dimen/len_16"
    android:layout_height="@dimen/len_48">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/first_text"
        android:layout_height="wrap_content"
        android:text="头像"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        android:id="@+id/im_portrait"
        android:layout_marginEnd="@dimen/len_4"
        android:src="@drawable/im_portrait"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_right_arrow_normal"/>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginStart="@dimen/len_16"
    android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/id_lin"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="@dimen/len_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_text"
            android:text="ID"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_number_text"
            android:layout_marginEnd="@dimen/len_4" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/len_16"
        android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/name_lin"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="@dimen/len_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_text"
            android:text="昵称"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/len_4"
            android:id="@+id/name_text" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_right_arrow_normal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/len_16"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/sex_lin"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="@dimen/len_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_text"
            android:text="性别"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_text"
            android:layout_marginEnd="@dimen/len_4"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_right_arrow_normal"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/len_16"
        android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/phone_lin"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="@dimen/len_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_text"
            android:text="手机号"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phonenumber_text"
            android:layout_marginEnd="@dimen/len_4"
            android:text="未绑定"/>

        <ImageView
            android:id="@+id/rightphoneimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_right_arrow_normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/len_16"
        android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/wechat_lin"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="@dimen/len_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_text"
            android:text="微信"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wechat_text"
            android:layout_marginEnd="@dimen/len_4" />
        <ImageView
            android:id="@+id/rightwechatimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_right_arrow_normal" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/view_line"
        android:layout_marginStart="@dimen/len_16"
        android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:id="@+id/update_lin"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="@dimen/len_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_text"
            android:text="修改密码"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_right_arrow_normal" />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:background="@drawable/bg_btn_red"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:id="@+id/exit_btn"
        android:layout_height="@dimen/len_44"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/exit"/>


</LinearLayout>
