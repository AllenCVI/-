<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_account_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     <include layout="@layout/layout_head_complex_first"></include>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_marginStart="@dimen/len_16"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"/>

    <com.kuxuan.moneynote.ui.weight.CaculatorLayout
       android:layout_width="match_parent"
       android:id="@+id/keybord"
       android:visibility="gone"
       android:layout_height="wrap_content">
   </com.kuxuan.moneynote.ui.weight.CaculatorLayout>

</LinearLayout>