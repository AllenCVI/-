<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head_lin"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_mineskin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/mine_skin"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_portrait"
                android:layout_width="@dimen/len_56"
                android:layout_height="@dimen/len_56"
                android:layout_marginTop="@dimen/len_48"
                android:contentDescription="@string/app_name"
                android:layout_centerHorizontal="true"
                android:src="@drawable/im_portrait" />

            <TextView
                android:id="@+id/name"
                android:layout_below="@+id/im_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:layout_centerHorizontal="true"
                android:text="@string/no_login"
                android:textColor="@color/white"
                android:textSize="@dimen/len_14" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/fragment_mine_accountbill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/accountbill_year"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_bill_year"
                    android:textColor="@color/first_text" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/fragment_mine_scroetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/score_shop"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_score_change"
                    android:textColor="@color/first_text" />


                <TextView
                    android:id="@+id/fragment_mine_circle_score"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_alignTop="@+id/fragment_mine_scroetext"
                    android:layout_toRightOf="@+id/fragment_mine_scroetext"
                    android:background="@drawable/drawable_circle_red" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bill_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_8"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/len_4"
                    android:layout_marginStart="@dimen/len_16"
                    android:layout_marginTop="@dimen/len_4"
                    android:text="@string/bill"
                    android:textColor="@color/first_text" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/len_4"
                    android:layout_marginEnd="@dimen/len_16"
                    android:layout_marginTop="@dimen/len_4"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/common_right_arrow_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/len_16"
                        android:text="@string/space"
                        android:textColor="@color/white"
                        android:textSize="@dimen/len_20" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/len_16"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="@string/income"
                        android:textColor="@color/textThird" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="@string/pay"
                        android:textColor="@color/textThird" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="@string/balance"
                        android:textColor="@color/textThird" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/len_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/len_16"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="18"
                        android:textColor="@color/first_text"
                        android:textSize="@dimen/len_20" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/len_16"
                        android:layout_marginStart="@dimen/len_8"
                        android:background="@color/first_text" />

                    <com.kuxuan.moneynote.ui.weight.MyTextView
                        android:id="@+id/income_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="@color/first_text" />

                    <com.kuxuan.moneynote.ui.weight.MyTextView
                        android:id="@+id/pay_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="@color/first_text" />

                    <com.kuxuan.moneynote.ui.weight.MyTextView
                        android:id="@+id/balance_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="@color/first_text" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/alarm_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:layout_marginTop="@dimen/len_8"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/me_alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/me_alarm"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_bill_export"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:layout_marginTop="@dimen/len_8"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/exportbill" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/bill_export"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />


        <LinearLayout
            android:id="@+id/category_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/me_category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/me_category"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
        <LinearLayout
            android:id="@+id/yusuan_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:layout_marginBottom="@dimen/len_8"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_budget" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/me_yusuan"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/recommend_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/me_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/me_recommend"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/advice_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/me_option" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/me_opinion"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/logo_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/me_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/me_logo"
                android:textColor="@color/first_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:contentDescription="@string/app_name"
                android:src="@drawable/common_right_arrow_normal" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>